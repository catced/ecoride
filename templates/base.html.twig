<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Covoiturage{% endblock %}</title>
    <link rel="stylesheet" href="{{ asset('css/style.css') }}">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>

    {% include 'components/navbar.html.twig' %}
    
    <main>
        {% block body %}{% endblock %}
    </main>

    {% include 'components/footer.html.twig' %}

    <script src="{{ asset('js/script.js') }}"></script>

    <script src="{{ asset('js/password-toggle.js') }}"></script>
</body>


</html>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const searchInput = document.getElementById("search");
        const resultsContainer = document.getElementById("results");
    
        searchInput.addEventListener("input", function () {
            const query = searchInput.value.trim();
            if (query.length < 3) {
                resultsContainer.innerHTML = ""; // Efface les rÈsultats si la recherche est vide
                return;
            }
    
            fetch(`/search-routes?q=${query}`)
                .then(response => response.json())
                .then(data => {
                    resultsContainer.innerHTML = ""; // Nettoyer les anciens rÈsultats
                    
                    if (data.length === 0) {
                        resultsContainer.innerHTML = "<p>Aucun itinÈraire trouvÈ.</p>";
                        return;
                    }
    
                    data.forEach(route => {
                        const item = document.createElement("div");
                        item.innerHTML = `<strong>${route.departue} ? ${route.destination}</strong> - ${route.date}`;
                        item.classList.add("search-result");
                        resultsContainer.appendChild(item);
                    });
                })
                .catch(error => console.error("Erreur lors de la recherche :", error));
        });
    });
    </script>