        {% for ride in rides %}
            <div class="ride-card">
                <h2>{{ ride.departure }} ? {{ ride.destination }}</h2>
                <p>Date : {{ ride.date|date('d/m/Y H:i') }}</p>
                <p>Conducteur : {{ ride.driver.username }}</p>
                <p>Prix : {{ ride.price }} ?</p>
                <a href="{{ path('ride_details', { id: ride.id }) }}">Voir détails</a>
            </div>
        {% else %}
            <p>Aucun trajet disponible.</p>
